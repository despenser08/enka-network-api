{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "allowJs": true,
    // "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  }
}